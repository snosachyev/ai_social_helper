# Database Configuration
POSTGRES_DB=rag_db
POSTGRES_USER=rag_user
POSTGRES_PASSWORD=rag_password
POSTGRES_HOST=postgres

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379

# Kafka Configuration
KAFKA_BOOTSTRAP_SERVERS=kafka:9092

# ClickHouse Configuration
CLICKHOUSE_HOST=clickhouse
CLICKHOUSE_DB=rag_analytics
CLICKHOUSE_USER=default
CLICKHOUSE_PASSWORD=

# Qdrant Configuration
QDRANT_HOST=qdrant
QDRANT_PORT=6333

# JWT Configuration
JWT_SECRET_KEY=your-super-secret-jwt-key-change-this-in-production
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# OpenAI Configuration (optional)
OPENAI_API_KEY=your-openai-api-key
OPENAI_BASE_URL=https://api.openai.com/v1

# Telegram Configuration
TELEGRAM_API_ID=your_telegram_api_id
TELEGRAM_API_HASH=your_telegram_api_hash
TELEGRAM_RATE_LIMIT=2.0
# Optional proxy configuration
# TELEGRAM_PROXY=socks5://username:password@host:port
# TELEGRAM_PROXY_TYPE=socks5

# Rate Limiting Configuration
RATE_LIMIT_PER_MINUTE=100
RATE_LIMIT_PER_HOUR=2000
RATE_LIMIT_PER_DAY=20000

# RAG Configuration
RAG_RETRIEVAL_TOP_K=20
RAG_MIN_SIMILARITY_SCORE=0.5
RAG_USE_RERANKING=true
RAG_USE_DIVERSITY_RERANKING=true

# Service Configuration
DEBUG=false
LOG_LEVEL=INFO
API_HOST=0.0.0.0

# Hugging Face Configuration
HF_HOME=/app/hf_cache
TRANSFORMERS_CACHE=/app/hf_cache/hub
HF_CACHE_DIR=/app/hf_cache
HF_OFFLINE_MODE=false
TRANSFORMERS_OFFLINE=0

# Memory Configuration
MAX_MEMORY_GB=8
GENERATION_MODEL=microsoft/DialoGPT-medium
